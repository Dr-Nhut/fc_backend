
<div class="man-title line">
    <h1>manager news</h1>
    <button><a href="../news-create">Add news content</a></button>
</div>

<div class="man-content">
  <table class="man-table">
    <thead>
      <tr>
        <th></th>
        <th>Image</th>
        <th>Name</th>
        <th>description</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      {{#each news}}
        <tr>
          <td><input type="checkbox" /></td>
          <td ><img src={{this.headline_image}} alt="" /></td>
          <td class="newss-title">{{this.title}}</td>
          <td class="newss-description">{{this.description}}</td>
          <td>
            <button class="button-edit">
              <a href="{{this._id}}/edit">
                <i class="fa-sharp fa-solid fa-pen"></i>
              </a>
            </button>
            <button
              data-id="{{this._id}}"
              data-toggle="modal"
              data-target="#confirmDeleteNews"
              class="button-edit">
              <i class="fa-solid fa-trash"></i>
              </button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Confirm delete button -->
<div id="confirmDeleteNews" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa Bài Viết?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc muốn xóa bài viết này.</p>
      </div>
      <div class="modal-footer">
        <button id="btn-del" type="button" class="btn btn-danger">OK</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

<form id="delete-news" method="POST"> </form>

<!-- Xử lý modal xóa -->
<script src="js/news_delete.js"></script>