<div class="player-create">
  <h1 class="text-center">ADD PLAYER</h1>

<form
  id="create-player"
  method="POST"
  class="form-input-add-player"
  action="/manager/player-create"
  enctype="multipart/form-data"
>

  <div class="form-outline mb-4">
    <label class="form-label" for="name">Name</label>
    <input
      type="text"
      id="name"
      class="form-control"
      name="name"
      maxlength="30"
      required
    />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="avatar">Avatar</label>
    <input type="file" id="avatar" class="form-control" name="avatar" accept=".jpg, .jpeg, .png"/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="backgroundImage">Background</label>
    <input type="file" id="backgroundImage" class="form-control" name="backgroundImage" accept=".jpg, .jpeg, .png"/>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="jersey_number">Jersey Number</label>
    <input
      type="number"
      id="jersey_number"
      class="form-control"
      name="jersey_number"
      required
    />
  </div>

  <div class="form-outline mb-4" id="position">
    <label class="form-label" for="position">Position</Pabel>
    <select class="form-control" name="position" >
      <option value="GK">GK</option>
      <option value="DF">DF</option>
      <option value="MF">MF</option>
      <option value="FW">FW</option>
    </select>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="dob">Day of Birth</label>
    <input
      type="date"
      id="dob"
      class="form-control"
      name="dob"
      required
    />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="dob">Quote</label>
    <input
      type="text"
      id="quote"
      class="form-control"
      name="quote"
      required
    />
  </div>

  <div class="form-outline mb-4 " id="biography">
    <label class="form-label" for="biography">Biography</label>
    <textarea
      id="biography"
      class="form-control"
      name="biography"
      required
    ></textarea>
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="country">Country</label>
    <input type="text" id="country" class="form-control" name="country" />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="joined">Joined</label>
    <input type="date" id="joined" class="form-control" name="joined" />
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn buttonSubmit btn-block mb-4">POST</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Back <a href="./">Here</a></p>
  </div>
</form>
</div>

