<div id="newss-create" >
  <h1 class="text-center">ADD ACCOUNT</h1>

<form
  id="account-create"
  method="POST"
  class="w-50 ml-auto mr-auto"
  action="/manager/account-create"
  oninput='confirmPassword.setCustomValidity(confirmPassword.value != password.value ? "Password Not Match" : "")'
>
  <div class="form-outline mb-4 ">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" class="form-control" name="name" required />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="email">Email</label>
    <input
      type="email"
      id="email"
      class="form-control"
      name="email"
      required
    />
  </div>

  <div class="form-outline mb-4 ">
    <label class="form-label" for="password">Password</label>
    <input
          type="password"
          id="password"
          class="form-control"
          name="password"
          minlength="8"
          maxlength="16"
          required
        />
  </div>

  <div class="form-outline mb-4 ">
    <label class="form-label" for="confirmPassword">Confirm Password</label>
    <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" required />
  </div>

  <div>
    <input type="checkbox" id="role"  name="admin" value="admin"  />
    <label class="form-label" for="role">Admin</label>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn buttonSubmit btn-block mb-4">Post</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Back <a href="./">Here</a></p>
  </div>
</form>
</div>

<div id="message-error" data-success={{success}} hidden>
  {{message}}
</div>

<script>
  const errorMess = document.querySelector("#message-error");
  console.log(errorMess.getAttribute('data-success') == 'false');
  console.log(errorMess.getAttribute('data-success'));
  if(errorMess.getAttribute('data-success') == 'false') {
    swal("Sorry!", errorMess.innerHTML, "error");
    errorMess.setAttribute('data-success', '');
  }
</script>