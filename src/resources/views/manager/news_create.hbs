<div id="newss-create" >
  <h1 class="text-center">ADD CONTENT</h1>

<form
  id="news-create"
  method="POST"
  class="w-50 ml-auto mr-auto"
  action="/manager/news-create"
  enctype="multipart/form-data"
>
  <div class="form-outline mb-4 ">
    <label class="form-label" for="title">Title</label>
    <input type="text" id="title" class="form-control" name="title" required />
  </div>
  <div class="form-outline mb-4">
    <label class="form-label" for="headline_image">Headline Image</label>
    <input
      type="file"
      id="headline_image"
      class="form-control"
      name="headline_image"
      accept=".jpg, .jpeg, .png"
    />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="description">Description</label>
    <input
      type="text"
      id="description"
      class="form-control"
      name="description"
      required
    />
  </div>

  <div class="form-outline mb-4">
    <label class="form-label" for="content">Content</label>
    <textarea name="content" id="editor"></textarea>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn buttonSubmit btn-block mb-4">Post</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Back <a href="./">Here</a></p>
  </div>
</form>

<script src="js/ckeditor5.js"></script>
<script src="js/news_create.js"></script>

</div>