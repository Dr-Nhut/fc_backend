
<div class="man-title">
  <div>
    <h1>Product Manager</h1>
  </div>

  <div>
    <button><a href="../product-create">Add Product</a></button>
  </div>
</div>

<div class="man-content">
  <table class="man-table">
    <thead>
      <tr class="text-center">
        <th></th>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr class="product-id1">
          <td><input type="checkbox" /></td>
          <td><img src={{this.productImage}} alt="" /></td>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}$</td>
          <td >{{this.type}}</td>
          <td class="col-2 text-center">
            <button class="button-edit"><a href="./{{this._id}}/edit"><i
                  class="fa-sharp fa-solid fa-pen "
                ></i></a></button>
            <button
              data-id="{{this._id}}"
              data-toggle="modal"
              data-target="#confirmDeleteProduct"
              class="button-edit"
            >
              <i class="fa-solid fa-trash"></i></button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Confirm delete button -->
<div id="confirmDeleteProduct" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa Sản phẩm?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc muốn xóa sản phẩm này.</p>
      </div>
      <div class="modal-footer">
        <button id="btn-del" type="button" class="btn btn-danger">OK</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

<form id="delete-product" method="POST"> </form>

<!-- Xử lý modal xóa -->
<script src="js/product_delete.js"></script>

